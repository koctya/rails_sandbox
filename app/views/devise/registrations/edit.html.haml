%h2 Edit #{resource_name.to_s.humanize}

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), method: :put ) do |f|
  = render "devise/shared/error_messages", resource: resource

  .field
    = f.input :username, autofocus: true
    %br
    =# f.username_field :username, autofocus: true, autocomplete: "username" %>

  .field
    = f.input :email, placeholder: 'user@domain.com'
    %br

  .field
    = f.input :first_name
    %br

  .field
    = f.input :last_name
    %br

  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div Currently waiting confirmation for: #{ resource.unconfirmed_email }


  .field
    = f.input :password
    %i (leave blank if you don't want to change it)
    %br


  -# = f.password_field :password, autocomplete: "new-password"
    - if @minimum_password_length
      %br
      %em #{ @minimum_password_length } characters minimum

  .field
    = f.input :password_confirmation
    %br

  .field
    = f.input :current_password
    %i (we need your current password to confirm your changes)
    %br

  .actions
    = f.button :submit


%h3 Cancel my account

%p Unhappy? #{ button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete }

= link_to "Back", :back
